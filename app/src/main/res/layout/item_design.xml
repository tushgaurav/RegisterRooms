<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgStudent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imgStudent"
            android:text="Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/imgStudent"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txtName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/txtName"
            android:text="Email"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/txtName"
            android:layout_marginStart="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="787021864"
            android:layout_toRightOf="@+id/imgStudent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            android:id="@+id/txtPhone"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/imgStudent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Floor 1, Block 2"
            android:layout_toRightOf="@+id/txtPhone"
            android:layout_alignBottom="@+id/txtPhone"
            android:layout_alignLeft="@+id/txtEmail"
            android:layout_alignStart="@+id/txtEmail" />



    </RelativeLayout>


</RelativeLayout>